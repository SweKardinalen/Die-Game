			int userBig = 0;
			int cpuBig = 0;
			if (slumptal1 > slumptal2)
			{
				userBig = slumptal1;
			}
			else
			{
				userBig = slumptal2;
			}
			if (slumptal3 > slumptal4)
			{
				cpuBig = slumptal3;
			}
			else
			{
				cpuBig = slumptal4;
			}


			// Ifall spelarens tal är större
			if (userBig > cpuBig)
