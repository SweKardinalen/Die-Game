				cout << "________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "___¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "_¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "¶¶¶¶______¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶_______¶¶¶¶" << endl;
				cout << "¶¶¶_______¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶________¶¶¶" << endl;
				cout << "¶¶________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶________¶¶¶" << endl;
				cout << "¶¶¶_____¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶______¶¶¶" << endl;
				cout << "¶¶¶____¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶____¶¶¶¶" << endl;
				cout << "_¶¶¶___¶¶¶_¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶_¶¶¶____¶¶¶" << endl;
				cout << "_¶¶¶¶___¶¶¶_¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶_¶¶¶¶__¶¶¶¶" << endl;
				cout << "___¶¶¶¶__¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶_¶¶¶¶¶" << endl;
				cout << "____¶¶¶¶¶¶¶¶_¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶_¶¶¶¶¶¶¶¶¶" << endl;
				cout << "______¶¶¶¶¶¶__¶¶¶¶¶¶¶¶¶¶¶¶¶¶___¶¶¶¶¶¶" << endl;
				cout << "_______________¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "_________________¶¶¶¶¶¶¶¶" << endl;
				cout << "___________________¶¶¶¶" << endl;
				cout << "___________________¶¶¶¶" << endl;
				cout << "___________________¶¶¶¶" << endl;
				cout << "___________________¶¶¶¶" << endl;
				cout << "_______________¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "____________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "____________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "____________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "____________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "____________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "____________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "____________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "__________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;
				cout << "_________¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶¶" << endl;

				break;
			}
			//räknar ut ifall CPU har 3 vunna ronder
			else if (Cvinst == 2)
			{
				system("cls");

				cout << "CPUn Vann matchen, bättre lycka nästa gång!" << endl;

				break;
			}

		}

		
	}
}
